<mvc:View
    controllerName="chart.controller.Charts"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
        class="sapUiResponsiveContentPadding"
    >
        <VBox
            class="sapUiResponsiveContentPadding"
            width="100%"
        >

            <mvc:XMLView viewName="chart.view.LineChart" />
            <mvc:XMLView viewName="chart.view.ColumnChart"/>
            <mvc:XMLView viewName="chart.view.DonutChart"/>
            <mvc:XMLView viewName="chart.view.HeatmapChart"/>
            <mvc:XMLView viewName="chart.view.TreemapChart"/>
        </VBox>
    </Page>
</mvc:View>
